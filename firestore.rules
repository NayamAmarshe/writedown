rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow update: if request.auth.uid == userId;
      allow create: if request.auth != null;
      allow read;
    }

    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    match /usernames/{username} {
      allow read;
      allow create: if isValidUsername(username);
    }

    function isValidUsername(username) {
      let isOwner = request.auth.uid == request.resource.data.uid;
      let isValidLength = username.size() >= 3 && username.size() <= 15;
      let isValidUserDoc = exists(/databases/$(database)/documents/users/$(request.auth.uid));

      return isOwner && isValidLength && isValidUserDoc;
    }

    match /users/{userId}/notes/{noteId} {
      allow create: if isValidUser(userId);
      allow read, write: if isValidUser(userId);
      allow read: if isPublicNote();
    }

    function isPublicNote() {
      return resource.data.public == true;
    }

    function isValidUser(userId) {
      let usersUsername = get(/databases/$(database)/documents/users/$(userId)).data.username;
      let usernamesUsername = exists(/databases/$(database)/documents/usernames/$(usersUsername));
      let hasUsername = usersUsername && usernamesUsername;
      let userIdMatches = get(/databases/$(database)/documents/usernames/$(usersUsername)).data.uid == userId;
      let isOwner = request.auth.uid == userId;

      return hasUsername && isOwner && userIdMatches;
    }

  }
}